# NVIDIA API Key for LLM and Embeddings
NVIDIA_API_KEY=your_nvidia_api_key_here

# Databricks Configuration (Required if execute_sql=true)
DATABRICKS_SERVER_HOSTNAME=your_databricks_hostname.cloud.databricks.com
DATABRICKS_HTTP_PATH=/sql/1.0/warehouses/your_warehouse_id
DATABRICKS_ACCESS_TOKEN=your_databricks_access_token

# Milvus Configuration (for remote Milvus)
# Use these when vanna_remote=true in config
MILVUS_HOST=your-milvus-host.zillizcloud.com
MILVUS_PORT=19530
MILVUS_USERNAME=your_milvus_username
MILVUS_PASSWORD=your_milvus_password

# Local Milvus Configuration (optional, when vanna_remote=false)
# SUPPLY_CHAIN_VDB_PATH=./milvus_vanna.db

# Feature Flags (optional - defaults are set in code)
# FLAG_VANNA_SQL_COLLECION=vannasql_v3_0
# FLAG_VANNA_DOC_COLLECION=vannadoc_v3_0
# FLAG_VANNA_DDL_COLLECION=vannaddl_v3_0
# FLAG_VANNA_COMMENT_COLLECION=vannacomment_v3_0
# FLAG_VANNA_REMOTE=true
# FLAG_MILVUS_VANNA_THRESH=2.0
